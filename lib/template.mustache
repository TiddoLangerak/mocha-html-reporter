<!doctype html>
<html>
	<head>
		<title>Mocha results - {{passes}}/{{tests}} passed</title>
		<link href="https://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" media="screen">
		<script src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js?skin=sunburst"></script>

		<style type="text/css">

		</style>
	</head>
	<body class="container">
		<h1>Summary</h1>
    <div class="progress">
			<div class="bar bar-success" style="width: {{successPercentage}}%;"></div>
			<div class="bar bar-danger" style="width: {{failurePercentage}}%;"></div>
    </div>
		{{#failed}}
		<div class="alert alert-error">
			<strong>Unit tests failed!</strong>
		</div>
		{{/failed}}
		<dl>
			<dt>Total tests:</dt>
			<dd>{{tests}}</dd>
			<dt>Passed:</dt>
			<dd>{{passes}}</dd>
			<dt>Failed</dt>
			<dd>{{failed}}</dd>
		</dl>
		{{#failed}}
		<h2>Failures:</h2>
		<ol class="failures">
		{{/failed}}
			{{#failures}}
				<li><a href="#error_{{index}}">{{test}}</a></li>
			{{/failures}}
		{{#failed}}
		</ol>
		{{/failed}}

		{{{results}}}

	</body>
</html>
